<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:layout_marginBottom="10dp"
    card_view:cardBackgroundColor="@color/colorBackgroundRecycleView">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ivPelicula"
        android:layout_width="100dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tvNombrePelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_toEndOf="@id/ivPelicula"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvDateOfRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/ivPelicula"
        android:textColor="@color/white"
        android:layout_below="@id/tvNombrePelicula"/>
    <TextView
        android:id="@+id/tvDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="15sp"
        android:layout_toEndOf="@id/ivPelicula"
        android:textColor="@color/white"
        android:layout_below="@id/tvDateOfRelease"
        android:layout_marginBottom="10dp"
        android:maxLines="4"/>

</RelativeLayout>
</android.support.v7.widget.CardView>